<%- include("../partials/head") -%>
    <body>
        <div class="container">
            
            <%- include("../partials/navbar") -%>
            <div class="row">
                <div class="col s3">
                    <form action="/feed/postScream" method="POST">
                        <input type="text" placeholder="just let it out" name="screamItem">
                        <input type="submit">
                    </form>
                    <p>Logged in as <%= user.userName %></p>
                  </div>
                <div class="col s9">
                    <% for(let i = 0; i < posts.length; i++){ %>    
                        <div class="card horizontal">
                            <div class="card-stacked">
                                <div class="card-content">
                                    <p><%= posts[i].content %></p>
                                </div>
                                <div class="card-action row">
                                    <form action="/feed/likePost/<%=posts[i]._id%>?_method=PUT" method="post">
                                        <button href="#">Like</button>
                                    </form>
                                    <form action="/feed/rescreamPost/<%= posts[i]._id %>?_method=PUT" method="POST">
                                        <button href="#">Rescream</button>
                                    </form>
                                    <% if(posts[i].user == user.id ){ %>
                                        <form action="/feed/deletePost/<%= posts[i]._id %>?_method=PUT">
                                            <button href="#">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html>